{
  "name": "trello-tool",
  "version": "1.0.0",
  "description": "CLI tool to interact with Trello API - export boards to markdown, create cards",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format:check": "prettier . --check",
    "format:write": "prettier . --write",
    "check": "npm run typecheck && npm run lint && npm run format:check",
    "prepare": "husky"
  },
  "keywords": [
    "trello",
    "cli",
    "markdown",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-plugin-organize-imports": "^4.3.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "express": "^5.2.1",
    "zod": "^4.3.5"
  }
}
